{
  "name": "@craft-cross-cms/rich-text-core",
  "version": "0.0.1",
  "description": "TipTap-based rich text core for Craft Cross CMS",
  "author": "PLAID, Inc.",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/plaidev/xcms-rich-text.git",
    "directory": "packages/core"
  },
  "keywords": [
    "craft-cross-cms"
  ],
  "engines": {
    "node": ">=20"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run --passWithNoTests",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@tiptap/core": "catalog:",
    "@tiptap/extension-blockquote": "catalog:",
    "@tiptap/extension-bold": "catalog:",
    "@tiptap/extension-code": "catalog:",
    "@tiptap/extension-code-block-lowlight": "catalog:",
    "@tiptap/extension-document": "catalog:",
    "@tiptap/extension-hard-break": "catalog:",
    "@tiptap/extension-heading": "catalog:",
    "@tiptap/extension-highlight": "catalog:",
    "@tiptap/extension-horizontal-rule": "catalog:",
    "@tiptap/extension-italic": "catalog:",
    "@tiptap/extension-link": "catalog:",
    "@tiptap/extension-list": "catalog:",
    "@tiptap/extension-paragraph": "catalog:",
    "@tiptap/extension-strike": "catalog:",
    "@tiptap/extension-subscript": "catalog:",
    "@tiptap/extension-superscript": "catalog:",
    "@tiptap/extension-table": "catalog:",
    "@tiptap/extension-text": "catalog:",
    "@tiptap/extension-text-align": "catalog:",
    "@tiptap/extension-text-style": "catalog:",
    "@tiptap/extension-underline": "catalog:",
    "@tiptap/extensions": "catalog:",
    "@tiptap/markdown": "catalog:",
    "@tiptap/pm": "catalog:",
    "lowlight": "3.3.0"
  },
  "devDependencies": {
    "@tiptap/starter-kit": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "jsdom": "27.4.0",
    "tsup": "catalog:",
    "vitest": "catalog:"
  }
}

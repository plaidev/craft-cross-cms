{
  "name": "@craft-cross-cms/rich-text",
  "private": true,
  "description": "A monorepo for all NPM packages related to Rich Text",
  "license": "Apache-2.0",
  "author": "PLAID, Inc.",
  "repository": {
    "type": "git",
    "url": "https://github.com/plaidev/xcms-rich-text.git"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@10.28.0",
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "pnpm run \"/^lint:.*/\"",
    "lint:eslint": "eslint .",
    "lint:knip": "knip",
    "lint:prettier": "prettier --check .",
    "fix": "pnpm run \"/^fix:.*/\"",
    "fix:eslint": "eslint . --fix",
    "fix:prettier": "prettier --write ."
  },
  "devDependencies": {
    "@eslint/js": "catalog:",
    "eslint": "catalog:",
    "eslint-config-prettier": "catalog:",
    "knip": "catalog:",
    "prettier": "catalog:",
    "prettier-plugin-organize-imports": "catalog:",
    "turbo": "catalog:",
    "typescript-eslint": "catalog:"
  }
}
